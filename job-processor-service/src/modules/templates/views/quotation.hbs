<table width="100%" cellspacing="0" cellpadding="0" style="padding:40px 0;background:#F5F6FA;">
  <tr><td align="center">
    <table width="650" cellpadding="0" cellspacing="0" style="background:white;border-radius:16px;padding:40px;">
      
      <!-- Header con logo -->
      <tr><td align="center">
        <img src="https://TU-DOMINIO/logo-kaptah.png" width="120" style="margin-bottom:20px;">
      </td></tr>

      <!-- T√≠tulo -->
      <tr><td style="font-size:28px;font-weight:bold;color:#7F3FF0;text-align:center;padding-bottom:10px;">
        Cotizaci√≥n {{folio}}
